<?xml version="1.0"?>

<faces-config version="2.2"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
>
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
	</lifecycle>
	<factory>
		<exception-handler-factory>epf.portlet.ExceptionUtil</exception-handler-factory>
	</factory>
	<navigation-rule>
		<from-view-id>/security/*</from-view-id>
		<navigation-case>
			<if>#{epf_security_session.token == null}</if>
			<to-view-id>/security/security.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/security/security.xhtml</from-view-id>
		<navigation-case>
			<if>#{epf_security_session.token != null}</if>
			<to-view-id>/security/session.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>

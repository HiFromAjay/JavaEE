<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>OpenUP</web-resource-name>
            <url-pattern>/openup/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            
            <role-name>Analyst</role-name>
            <role-name>AnyRole</role-name>
            <role-name>Architect</role-name>
            <role-name>Developer</role-name>
            <role-name>ProjectManager</role-name>
            <role-name>Stakeholder</role-name>
            <role-name>Tester</role-name>
            
            <role-name>CourseDeveloper</role-name>
            <role-name>DeploymentEngineer</role-name>
            <role-name>DeploymentManager</role-name>
            <role-name>ProductOwner</role-name>
            <role-name>TechnicalWriter</role-name>
            <role-name>Trainer</role-name>
            
            <role-name>ProcessEngineer</role-name>
            <role-name>ToolSpecialist</role-name>
            
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <error-page>
        <exception-type>javax.ejb.EJBAccessException</exception-type>
        <location>/index.xhtml</location>
    </error-page>
</web-app>

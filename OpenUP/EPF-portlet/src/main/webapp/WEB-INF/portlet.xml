<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>EPF-security</portlet-name>
		<display-name>EPF-security</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/WEB-INF/security/security.xhtml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>EPF-security</title>
			<short-title>EPF-security</short-title>
			<keywords>EPF-security</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>epf.gateway.url</name>
				<value>https://localhost:9443/gateway/</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-publishing-event>
			<qname xmlns:epf-security="http://openup.org/epf/security">epf-security:principal</qname>
		</supported-publishing-event>
	</portlet>
	<portlet>
		<portlet-name>EPF-persistence</portlet-name>
		<display-name>EPF-persistence</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/WEB-INF/persistence/persistence.xhtml</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.bridgeEventHandler</name>
			<value>epf.portlet.EventHandler</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>EPF-persistence</title>
			<short-title>EPF-persistence</short-title>
			<keywords>EPF-persistence</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>epf.gateway.url</name>
				<value>https://localhost:9443/gateway/</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-processing-event>
			<qname xmlns:epf-security="http://openup.org/epf/security">epf-security:principal</qname>
		</supported-processing-event>
	</portlet>
	<event-definition>
		<qname xmlns:epf-security="http://openup.org/epf/security">epf-security:principal</qname>
		<value-type>epf.portlet.security.Principal</value-type>
	</event-definition>
</portlet-app>